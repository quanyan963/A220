<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <include android:id="@+id/i_add_tool"
        layout="@layout/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/img_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bind_boyxhdpi"
        android:layout_marginTop="@dimen/dp_16_x"
        app:layout_constraintTop_toBottomOf="@+id/i_add_tool"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_woman"
        android:foreground="@drawable/img_forground"/>

    <ImageView
        android:id="@+id/img_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16_x"
        android:src="@mipmap/bind_girlxhdpi"
        app:layout_constraintTop_toBottomOf="@+id/i_add_tool"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_man"/>
</androidx.constraintlayout.widget.ConstraintLayout>