<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_dialog">

    <com.txtled.gpa220.widget.CustomButton
        android:id="@+id/cbt_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_16_x"
        android:layout_marginTop="@dimen/dp_8_x"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="@string/cancel"
        android:textAppearance="?android:attr/textAppearance"
        app:cornerRadius="@dimen/dp_8_x"
        app:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_20_x"
        android:paddingRight="@dimen/dp_20_x"
        android:paddingTop="@dimen/dp_6_x"
        android:paddingBottom="@dimen/dp_6_x"/>

    <com.txtled.gpa220.widget.CustomButton
        android:id="@+id/cbt_dialog_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_16_x"
        android:layout_marginTop="@dimen/dp_8_x"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="@string/conform"
        android:textAppearance="?android:attr/textAppearance"
        app:cornerRadius="@dimen/dp_8_x"
        app:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_20_x"
        android:paddingRight="@dimen/dp_20_x"
        android:paddingTop="@dimen/dp_6_x"
        android:paddingBottom="@dimen/dp_6_x"/>
    <DatePicker
        android:id="@+id/dp_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        app:layout_constraintTop_toBottomOf="@+id/cbt_dialog_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/dp_8_x"/>
</androidx.constraintlayout.widget.ConstraintLayout>